<div class="articles">
  {% for post in posts %}
    {% if post.data.published %}
      <article>
        <h2>
          <a href="{{ post.url | url }}">{{ post.data.title }}</a>
        </h2>
        {% if post.data.cover_image %}
        <img src="{{ post.data.cover_image | url }}" alt="">
        {% endif %}        
        <p>{{ post.data.description }}</p>        
      </article>
    {% endif %}
  {% endfor %}
</div>
